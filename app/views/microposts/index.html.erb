<p id="notice"><%= notice %></p>

<h1>MicroPosts</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.text %></td>
        <td><%= micropost.tag %></td>
        <td><%= link_to 'show', micropost_path(micropost) %></td>
        <td><%= link_to 'New Comment', micropost_comments_path(micropost) %></td>
          <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New MicroPost', new_micropost_path %>
