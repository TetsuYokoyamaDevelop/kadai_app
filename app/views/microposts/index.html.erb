<p id="notice"><%= notice %></p>
<h1 class ="text-center">MicroPosts</h1>
<div class="container">
  <div class="button_wrapper">
    <%= link_to 'New MicroPost', new_micropost_path ,:class => "btn btn-primary" %>
    </div>
    <div class="alt-table-responsive">
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Nickname</th>
                <th scope="col">Text</th>
                <th scope="col">Tag</th>
                <th colspan="3"></th>
              </tr>
            </thead>
        <tbody>
          <% @microposts.each do |micropost| %>
            <tr>
                <div class="row">
                    <div class="col-sm">
                        <td class="col-xs-3"><%= micropost.user.nickname %></td>
                    </div>

                    <div class="col-sm">
                        <td class="col-xs-3"><%= micropost.text %></td>
                    </div>

                    <div class="col-sm">
                      <td class="col-xs-3"><%= micropost.tag %></td>
                    </div>

                    <div class="col-sm">
                      <td><%= link_to 'Comment', micropost_comments_path(micropost) ,:class => "btn btn-info"%></td>
                    </div>
                </div>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
