<div class="container">
  <div class="form-group">

      <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Nickname:</th>
                <th scope="col"><%= @user.nickname %></th>
                <th colspan="3"></th>
              </tr>
            </thead>

      <%= form_for(@micropost) do |form| %>
        <tbody>
          <tr>
            <div class="row">
                <div class="col-sm">
                    <div class="field">
                      <td class="col-xs-3"><%= form.text_field :text, class: 'form-control', placeholder: "Text", autofocus: true  %></td><br>
                    </div>

                    <div class="field">
                      <td class="col-xs-3">
                      <%= form.number_field :tag , class: 'form-control', placeholder: "Tag", autofocus: true  %></td><br>
                    </div>

                    <div class="actions">
                        <td class="col-xs-3">
                      <%= form.submit :class => "btn btn-primary"%></td>
                    </div>

                    <div class="actions">
                        <td class="col-xs-3">
                      <%= link_to 'Back', microposts_path ,:class => "btn btn-info"%></td>
                    </div>

                </div>
            </div>
      <% end %>
      </tbody>
  </div>
</div>
