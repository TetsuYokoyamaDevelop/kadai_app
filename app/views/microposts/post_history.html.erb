<p id="notice" class="text-center"><%= notice %></p>
<h1 class ="text-center">履歴</h1>
<div class="container">
  <div class="button_wrapper">
    <%= link_to 'ツイート', new_micropost_path ,:class => "btn btn-primary btn-lg" %>
  </div><br>
    <div class="table-responsive">
      <table class="table">
        <tbody>
      <% @microposts.each do |micropost| %>
        <tr>
          <div class="text-primary">
            <td class="col-xs-3"><p class="text-primary">by: <%= micropost.user.nickname %></p><br>
          </div>
              <p><%= micropost.text %></p>
            </td>
          </tr>
            <tr>
              <td><%= link_to 'リプライ', micropost_comments_path(micropost) ,:class => "btn btn-primary"%>
              <%= link_to '表示', micropost_path(micropost) ,:class => "btn btn-info"%></td>
              <td><%= link_to '削除', micropost, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
