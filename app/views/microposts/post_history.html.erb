<p id="notice" class="text-center"><%= notice %></p>
<h1 class ="text-center">ツイート履歴</h1>
<div class="container">
  <div class="button_wrapper">
    <%= link_to 'ツイート', new_micropost_path ,:class => "btn btn-primary btn-lg" %>
  </div>
    <div class="table-responsive">
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">ニックネーム</th>
                <th scope="col">投稿</th>
                <th colspan="3"></th>
              </tr>
            </thead>
        <tbody>
          <% @microposts.each do |micropost| %>
            <tr>
                <div class="row">
                    <div class="col-sm">
                        <td class="col-xs-3"><%= micropost.user.nickname %></td>
                    </div>
                    <div class="col-sm">
                        <td class="col-xs-3"><%= micropost.text %></td>
                    </div>
                </div>
            </tr>
            <tr>
              <td><%= link_to 'リプライ', micropost_comments_path(micropost) ,:class => "btn btn-primary"%></td>
              <td><%= link_to '表示', micropost_path(micropost) ,:class => "btn btn-info"%></td>
              <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
