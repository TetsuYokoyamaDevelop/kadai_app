<p id="notice"><%= notice %></p>

<h1>Comment</h1>

<p>
  <strong><%= @micropost.text %></strong>
</p>

<table>
  <thead>
    <tr>
      <th>Replyment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.replyment %></td>
        <td><%= link_to 'Destroy', micropost_comments_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_micropost_comment_path %>

