<p id="notice"><%= notice %></p>

<h1>Comment</h1>

<p>
  <strong><%= @micropost.text %></strong>
</p>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Replyment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.replyment %></td>
        <td><%= link_to 'show', micropost_comment_path(@micropost, comment) %></td>
        <td><%= link_to 'Destroy', micropost_comment_path(@micropost, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_micropost_comment_path, :class => "btn btn-primary" %>

<%= link_to 'Back',microposts_path, :class => "btn btn-info" %>
