<h1>New Comments</h1>

<p>
  <strong>nickname:</strong>
  <%= @user.nickname %>
</p>
<% if false %>
<p>
  <strong>text:</strong>
  <%= @micropost_comment.micropost.text%>
</p>
<% end %>
<%= form_for(@comment) do |form| %>

  <div class="field">
    <%= form.label :replyment %><br>
    <%= form.text_field :replyment %><br>
  </div>

  <div class="actions">
    <%= form.submit %><br>
  </div>
<% end %>

<%= link_to 'Back',microposts_path %>
