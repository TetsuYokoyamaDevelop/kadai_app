<h1>New Comments</h1>

<p>
  <strong>nickname:</strong>
  <%= @user.nickname %>
</p>

<p>
  <strong>text:</strong>
  <%= @micropost.text%>
</p>

<%= form_for(@comment, :url => micropost_comments_path) do |form| %>

  <div class="field">
    <%= form.label :replyment %><br>
    <%= form.text_field :replyment %><br>
  </div>

  <div class="actions">
    <%= form.submit %><br>
  </div>

<% end %>

<%= link_to 'Back',micropost_comments_path %>
