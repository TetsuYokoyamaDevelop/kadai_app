<h1 class="text-center">Register</h1>

<%= form_for(@user) do |form| %>

<div class="container">
  <div class="form-group">
    <%= form.text_field :email, class: 'form-control', placeholder: "Email Address"%><br>
  </div>
  <div class="form-group">
    <%= form.password_field :password , class: 'form-control', placeholder: "Password" %><br>
  </div>

    <div class="form-group">
       <%= form.password_field :password_confirmation, class: 'form-control', placeholder: "password_confirmation"%><br>
    </div>

    <div class="actions">
      <%= form.submit :class => "btn btn-primary"%><br>
    </div>
   <% end %>
<br>
<%= link_to 'Back', login_path ,:class => "btn btn-info" %>
</div>
