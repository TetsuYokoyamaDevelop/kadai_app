<%= form_tag user_sessions_path, :method => :post do %>
<div class="container">
    <div class="form-group">
          <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-10">
              <%= text_field_tag :email,params[:email], class: 'form-control', placeholder: "メールアドレス", autofocus: true  %><br>
            </div>
    </div>
    <div class="form-group">
          <label class="control-label col-sm-2" for="email">Password:</label>
            <div class="col-sm-10">
              <%= password_field_tag :password ,params[:password], class: 'form-control', placeholder: "パスワード", autofocus: true  %><br>
            </div>
    </div>
    <div class="btn-lg">
      <div class="actions">
        <div class="button_wrapper">
          <%= submit_tag "ログイン" ,:class => "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
</div>
<% end %>
